<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="900.0" style="-fx-background-color: linear-gradient(to bottom, #e0ffff, #add8e6);" xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boev.app.snake_game_net_4.controllers.NewGameController">

   <Label layoutX="250.0" layoutY="30.0" text="Creating Game Settings" textFill="#ffffff" style="-fx-font-weight: bold; -fx-text-fill: linear-gradient(to bottom, #00bfff, #1e90ff);">
      <font>
         <Font size="28.0" />
      </font>
   </Label>

   <VBox layoutX="250.0" layoutY="80.0" spacing="20.0" prefWidth="300.0">
      <VBox spacing="5.0">
         <Label text="Game field width:" style="-fx-text-fill: linear-gradient(to bottom, #00bfff, #1e90ff);">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         <TextField fx:id="widthField" alignment="CENTER" promptText="Enter width" text="40" style="-fx-background-color: #f0f8ff; -fx-border-color: #00bfff; -fx-border-radius: 5; -fx-background-radius: 5;" />
      </VBox>
      <VBox spacing="5.0">
         <Label text="Game field height:" style="-fx-text-fill: linear-gradient(to bottom, #00bfff, #1e90ff);">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         <TextField fx:id="heightField" alignment="CENTER" promptText="Enter height" text="30" style="-fx-background-color: #f0f8ff; -fx-border-color: #00bfff; -fx-border-radius: 5; -fx-background-radius: 5;" />
      </VBox>
      <VBox spacing="5.0">
         <Label text="Food Static:" style="-fx-text-fill: linear-gradient(to bottom, #00bfff, #1e90ff);">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         <TextField fx:id="foodStaticField" alignment="CENTER" promptText="Enter foodStatic" text="1" style="-fx-background-color: #f0f8ff; -fx-border-color: #00bfff; -fx-border-radius: 5; -fx-background-radius: 5;" />
      </VBox>
      <VBox spacing="5.0">
         <Label text="Delay:" style="-fx-text-fill: linear-gradient(to bottom, #00bfff, #1e90ff);">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         <TextField fx:id="delayField" alignment="CENTER" promptText="Enter delay" text="1000" style="-fx-background-color: #f0f8ff; -fx-border-color: #00bfff; -fx-border-radius: 5; -fx-background-radius: 5;" />
      </VBox>
      <VBox spacing="5.0">
         <Label text="Game name:" style="-fx-text-fill: linear-gradient(to bottom, #00bfff, #1e90ff);">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         <TextField fx:id="gameNameField" alignment="CENTER" promptText="Enter game name" style="-fx-background-color: #f0f8ff; -fx-border-color: #00bfff; -fx-border-radius: 5; -fx-background-radius: 5;" />
      </VBox>
      <VBox spacing="5.0">
         <Label text="Nickname:" style="-fx-text-fill: linear-gradient(to bottom, #00bfff, #1e90ff);">
            <font>
               <Font size="16.0" />
            </font>
         </Label>
         <TextField fx:id="nicknameField" alignment="CENTER" promptText="Enter nickname" style="-fx-background-color: #f0f8ff; -fx-border-color: #00bfff; -fx-border-radius: 5; -fx-background-radius: 5;" />
      </VBox>
   </VBox>

   <VBox layoutX="300.0" layoutY="550.0" spacing="10.0" prefHeight="70.0" prefWidth="200.0">
      <Button onAction="#startGame" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #b0e0e6; -fx-border-color: #00bfff; -fx-border-width: 3; -fx-border-radius: 10; -fx-background-radius: 10;" text="Start Game" textFill="#ffffff">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button onAction="#back" mnemonicParsing="false" prefHeight="40.0" prefWidth="200.0" style="-fx-background-color: #add8e6; -fx-border-color: #1e90ff; -fx-border-width: 3; -fx-border-radius: 10; -fx-background-radius: 10;" text="Back" textFill="#ffffff">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
   </VBox>
</AnchorPane>
