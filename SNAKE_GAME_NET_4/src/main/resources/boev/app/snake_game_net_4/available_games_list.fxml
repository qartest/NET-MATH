<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, #e0ffff, #add8e6);" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="boev.app.snake_game_net_4.controllers.AvailableGamesListController">

    <!-- Список доступных игр -->
    <ListView fx:id="gamesList" onMouseClicked="#chooseGame" focusTraversable="false" layoutX="20.0" layoutY="20.0" prefHeight="380.0" prefWidth="760.0"
              style="-fx-background-color: #ffffff; -fx-border-color: #00bfff; -fx-border-radius: 5; -fx-background-radius: 5;" />

    <!-- Нижняя панель с элементами управления -->
    <HBox layoutX="20.0" layoutY="420.0" spacing="20.0" alignment="CENTER">
        <!-- Поле ввода для ника -->
        <HBox spacing="5.0">
            <Label text="Nickname:" textFill="#ffffff" style="-fx-font-weight: bold;">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>
            <TextField fx:id="nicknameField" alignment="CENTER" promptText="Enter nickname" prefHeight="26.0" prefWidth="150.0"
                       style="-fx-background-color: #ffffff; -fx-border-color: #00bfff; -fx-border-radius: 5; -fx-background-radius: 5;" />
        </HBox>

        <!-- Флажок для режима просмотра -->
        <CheckBox fx:id="viewerModeCheckBox" mnemonicParsing="false" text="Only View" textFill="#ffffff" style="-fx-font-weight: bold;">
            <font>
                <Font size="14.0" />
            </font>
        </CheckBox>

        <!-- Кнопки -->
        <HBox spacing="15.0">
            <Button onAction="#discover" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0"
                    style="-fx-background-color: #b0e0e6; -fx-border-color: #00bfff; -fx-border-width: 3; -fx-border-radius: 10; -fx-background-radius: 10;"
                    text="Reload" textFill="#ffffff">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
            <Button onAction="#back" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0"
                    style="-fx-background-color: #87cefa; -fx-border-color: #1e90ff; -fx-border-width: 3; -fx-border-radius: 10; -fx-background-radius: 10;"
                    text="Back" textFill="#ffffff">
                <font>
                    <Font size="14.0" />
                </font>
            </Button>
        </HBox>
    </HBox>
</AnchorPane>
